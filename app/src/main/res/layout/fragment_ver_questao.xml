<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="br.cefetmg.inf.medidaexata.view.fragments.VerQuestaoFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.MaterialCardView">

            <LinearLayout
                android:id="@+id/ll_ver_questao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginBottom="@dimen/text_margin"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_materia_abordada_questao"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/AppTheme.MaterialCardText"
                    android:textColor="?attr/colorAccent"
                    android:textSize="24sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mtrl_bt_alt_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.MaterialButtonFilled.Alternativa" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mtrl_bt_alt_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.MaterialButtonFilled.Alternativa" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mtrl_bt_alt_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.MaterialButtonFilled.Alternativa" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mtrl_bt_alt_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mtrl_bt_margin_btt"
            style="@style/AppTheme.MaterialButtonFilled.Alternativa" />
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/cv_rootv_frg_questoes"
    style="@style/AppTheme.MaterialCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_enunciado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginBottom="4dp"

            tools:text="João é legal"
            android:maxLength="100"
            android:textColor="@color/cinza"/>

        <TextView
            android:id="@+id/tv_conhecimento_abordado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginTop="4dp"
            android:gravity="right"

            android:text="@string/con_abordado"
            android:textColor="@color/preto" />

        <TextView
            android:id="@+id/tv_obj_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="64dp"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp"
            android:gravity="end"

            tools:text="asdasdasdasdsadasd"
            android:textColor="@color/cinza"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_ver_questao"
                style="@style/AppTheme.MaterialButtonOutlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/mtrl_bt_margin_hrz"
                android:layout_marginTop="@dimen/mtrl_bt_soft_margin_vrt"
                android:layout_marginBottom="@dimen/mtrl_bt_soft_margin_vrt"

                android:text="@string/ver_questao" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_ver_materia"
                style="@style/AppTheme.MaterialButtonOutlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="@dimen/mtrl_bt_margin_hrz"
                android:layout_marginTop="@dimen/mtrl_bt_soft_margin_vrt"
                android:layout_marginBottom="@dimen/mtrl_bt_soft_margin_vrt"

                android:text="@string/ver_materia" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
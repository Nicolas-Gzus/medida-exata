<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Cores -->
            <!--Cores do aplicativo-->
                <item name="colorPrimary">@color/colorPrimary</item>
                <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
                <item name="colorSecondary">@color/colorSecondary</item>
                <!-- Coloquei só por precaução, porque equivale ao secondary color -->
                    <item name="colorAccent">?attr/colorSecondary</item>
    </style>

    <!-- Estilo padrão para botões Material preenchidos -->
    <style name="AppTheme.MaterialButtonFilled" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <!-- Estilo acima para alternativas de questões -->
    <style name="AppTheme.MaterialButtonFilled.Alternativa" parent="AppTheme.MaterialButtonFilled">
        <item name="android:minHeight">@dimen/mtrl_bt_alternativa_min_height</item>

        <item name="android:layout_marginStart">@dimen/mtrl_bt_soft_margin_hrz</item>
        <item name="android:layout_marginLeft">@dimen/mtrl_bt_soft_margin_hrz</item>
        <item name="android:layout_marginEnd">@dimen/mtrl_bt_soft_margin_hrz</item>
        <item name="android:layout_marginRight">@dimen/mtrl_bt_soft_margin_hrz</item>
        <item name="android:layout_marginTop">@dimen/mtrl_bt_soft_margin_vrt</item>
        <item name="android:layout_marginBottom">@dimen/mtrl_bt_alternativa_margin_btt</item>

        <item name="android:gravity">left|center_vertical</item>

        <item name="backgroundTint">@color/branco</item>

        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo padrão para botões Material Text -->
    <style name="AppTheme.MaterialButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_margin">@dimen/text_margin</item>
    </style>

    <!-- Estilo padrão para botões Material Outlined -->
    <style name="AppTheme.MaterialButtonOutlined"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>

        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Estilo para Material Card -->
    <style name="AppTheme.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:minHeight">@dimen/mtrl_card_min_height</item>

        <item name="android:layout_marginStart">@dimen/mtrl_card_margin_hrz</item>
        <item name="android:layout_marginLeft">@dimen/mtrl_card_margin_hrz</item>
        <item name="android:layout_marginEnd">@dimen/mtrl_card_margin_hrz</item>
        <item name="android:layout_marginRight">@dimen/mtrl_card_margin_hrz</item>
        <item name="android:layout_marginTop">@dimen/mtrl_card_margin_vrt</item>
        <item name="android:layout_marginBottom">@dimen/mtrl_card_margin_vrt</item>

        <item name="cardBackgroundColor">@color/branco</item>

        <item name="cardCornerRadius">@dimen/mtrl_card_corner_radius</item>
        <item name="cardElevation">@dimen/mtrl_card_default_elevation</item>
    </style>
    <!-- Estilo acima só que para as alternativas de cada questão -->
    <!--<style name="AppTheme.MaterialCardView.Alternativa" parent="AppTheme.MaterialCardView">-->
        <!--<item name="android:layout_marginBottom">@dimen/mtrl_card_alternativa_margin_btt</item>-->
    <!--</style>-->

    <!-- Material Card Text -->
    <style name="AppTheme.MaterialCardText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_margin">@dimen/text_margin</item>
    </style>
</resources>
